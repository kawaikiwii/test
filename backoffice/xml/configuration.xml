            <guid desc="Generic GUI id - used only by developers">wcm4-boar</guid>
            <title desc="Back Office Display Project Name">RELAX BACK-OFFICE</title>
        </project>
        <default>
            <sessionName desc="">boar</sessionName>
            <language desc="">en</language>
            <siteId desc="">4</siteId>
